                        <% } else if (randomAd3.data.type === 'Events') { %>
                            <span class="badge badge-info"><%- randomAd3.data.type %></span>
                        <% } else if (randomAd3.data.type === 'Announcements') { %>
                            <span class="badge badge-danger"><%- randomAd3.data.type %></span>
                        <% } else { %>
                            <span class="badge badge-secondary"><%- randomAd3.data.type %></span>
                        <% } %>
                    </p>
                    <a href="/news/<%= randomAd3.id %>" class="btn btn-primary">Read More</a>
                </div>
            </div>
            <% const randomAd4 = randoms[Math.floor(Math.random() * randoms.length)]; %>
            <div class="card news-item">
                <img src="<%= randomAd4.data.type === 'News' ? 'https://bccare.ca/wp-content/uploads/breakingnews.jpg' : randomAd4.data.type === 'Events' ? 'https://th.bing.com/th/id/OIP.qBAeUZhNXTjMnXic-d1zoAHaG2?w=800&h=740&rs=1&pid=ImgDetMain' : randomAd4.data.type === 'Announcements' ? 'https://th.bing.com/th/id/R.3ec29551ef6bb524a00cf8030d0a8c4a?rik=QC9XE13b8IhOzA&riu=http%3a%2f%2fcliparts.co%2fcliparts%2fLcd%2fojE%2fLcdojE7oi.jpg&ehk=BZEzuH5IXM5iZ32G1JJUur9gZhcd%2f1FfRXjmRT1GPcg%3d&risl=&pid=ImgRaw&r=0' : '' %>" class="card-img-top thumbnail" alt="TinyTensor Thumbnail News">
                <div class="card-body">
                    <h5 class="card-title"><%= randomAd4.data.title %></h5>
                    <p class="card-text">
                        <% if (randomAd4.data.type === 'News') { %>
                            <span class="badge badge-success"><%- randomAd4.data.type %></span>
                        <% } else if (randomAd4.data.type === 'Events') { %>
                            <span class="badge badge-info"><%- randomAd4.data.type %></span>
                        <% } else if (randomAd4.data.type === 'Announcements') { %>
                            <span class="badge badge-danger"><%- randomAd4.data.type %></span>
                        <% } else { %>
                            <span class="badge badge-secondary"><%- randomAd4.data.type %></span>
                        <% } %>
                    </p>
                    <a href="/news/<%= randomAd4.id %>" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>
    </div>
  </div>
</body>
<%- include('../templates/footer') %>
<script type="module" src="/javascripts/posts.js"></script>
<script type="module" src="/javascripts/postsmodule.js"></script>
</html>